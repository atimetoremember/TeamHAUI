            android:label="@string/app_name">
            <intent-filter>
                <action android:name="vn.edu.diaryapp.EditNoteActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
